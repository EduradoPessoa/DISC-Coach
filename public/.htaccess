<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # Allow access to API if it happens to be inside (unlikely but safe)
  RewriteCond %{REQUEST_URI} api/
  RewriteRule ^ - [L]

  # SPA Fallback
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule . index.html [L]
</IfModule>